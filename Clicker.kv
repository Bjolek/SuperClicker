<MainScreen>:
    BoxLayout:
        orientation: "vertical"

        FloatLayout:
            Image:
                pos_hint: {"center_x": 0.5, "top": 1}
                allow_stretch: True
                keep_ratio: False
                source: "FootballFon.png"
            FloatLayout:
                Label:
                    id: score_lbl
                    size_hint: 0.3, 0.1  # Изменено для изменения размера надписи
                    pos_hint: {"center_x": 0.5, "top": 1.22}  # Изменено для размещения сверху
                    font_size: 24  # Изменено для изменения размера шрифта
                    text: "Рахунок"
                Image:
                    id: ball
                    size_hint: 0.3, 0.3
                    pos_hint: {"center_x": 0.5, "top": 0.79}
                    source: "ball.png"

                Button:
                    size_hint: 0.3, 0.3
                    pos_hint: {"center_x": 0.5, "top": 0.75}
                    text: "312"
                    background_color: 1, 0, 0, 0.0
                    on_press: root.click()
                    on_release: root.unclick()

        Button:
            text: "Магазин"
            size_hint: 1, 0.2
            on_press: root.switch_to_shop_screen()


<MenuScreen>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Грати"
            on_press: app.switch_to_main_screen()


<ShopScreen>:
    FloatLayout:
        Image:
            source: 'img_1.png'
            allow_stretch: True
            keep_ratio: False
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                orientation: "horizontal"
                size_hint: 1, 0.2
                Button:
                    text: "Назад"
                    on_press: root.go_back_to_main_screen()  # Добавлен обработчик событий
                Label:
                    text: "Рахунок"
            ScrollView:
                size_hint_y: None
                size_hint: 1, 1
                GridLayout:
                    id: shopItems
                    size_hint_y: None
                    height: self.minimum_height
                    cols: 1
                    row_default_height: 100
                    FloatLayout:
                        Button:
                            size_hint: 1, 1
                            pos_hint: {'center_x': 0.5, 'center_y':0.5}
                            on_press: root.buy(100,100)
                        Image:
                            size_hint: 0.1, 1
                            pos_hint: {'x': 0, 'center_y':0.5}
                            source: 'ball2.png'
                    FloatLayout:
                        Button:
                            size_hint: 1, 1
                            pos_hint: {'center_x': 0.5, 'center_y':0.5}
                            on_press: root.buy(200,200)

                        Image:
                            size_hint: 0.1, 1
                            pos_hint: {'x': 0, 'center_y':0.5}
                            source: 'ball3.png'
